<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.progtechjavafx.AddScheduleController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10.0" alignment="CENTER" layoutX="50.0" layoutY="25.0">

        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Train:"/>
            <ComboBox fx:id="trainComboBox"/>
        </HBox>

        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Line:"/>
            <ComboBox fx:id="lineComboBox"/>
        </HBox>

        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Time (in minutes):"/>
            <TextField fx:id="timeField"/>
        </HBox>

        <Button fx:id="addButton" text="Add" onAction="#handleAddButtonAction"/>

    </VBox>

</AnchorPane>
